Vagrant.configure('2') do |config|
  config.cache.scope = 'machine' if Vagrant.has_plugin?('vagrant-cachier')
  config.vm.box = 'dockpack/centos6'
  config.ssh.insert_key = false
    
  config.vm.provider 'virtualbox' do |vb|
    vb.cpus = 2
    vb.memory = 1024
  end

    

    

  config.vm.define 'postgres-master' do |c|
    c.vm.hostname = 'postgres-master'
    
    c.vm.network 'private_network', type: 'static', auto_config: true, ip: '192.168.123.2'
    c.vm.hostname = 'postgres-master'
  end
  config.vm.define 'postgres-slave' do |c|
    c.vm.hostname = 'postgres-slave'
    
    c.vm.network 'private_network', type: 'static', auto_config: true, ip: '192.168.123.3'
    c.vm.hostname = 'postgres-slave'
  end
  
end